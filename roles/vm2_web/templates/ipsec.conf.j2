# ipsec.conf - strongSwan IPSEC client configuration for VM2
config setup
    charondebug="ike 1, knl 1, cfg 0"

conn %default
    keyexchange=ikev2
    ike=aes256-sha2_256-modp2048!
    esp=aes256-sha2_256!
    dpdaction=clear
    dpddelay=30s
    rekey=no
    leftcert={{ ipsec_client_cert_name }}
    leftsendcert=always
    authby=rsasig

conn vm1
    left=%defaultroute
    leftsourceip=%config
    right={{ vm1_internal_ip }}
    rightsubnet={{ internal_net_cidr }}
    auto=start