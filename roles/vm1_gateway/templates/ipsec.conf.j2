# ipsec.conf - strongSwan IPSEC configuration for VM1
config setup
    charondebug="ike 1, knl 1, cfg 0"

conn %default
    keyexchange=ikev2
    ike=aes256-sha2_256-modp2048!
    esp=aes256-sha2_256!
    dpdaction=clear
    dpddelay=30s
    rekey=no
    leftcert={{ ipsec_server_cert_name }}
    leftsendcert=always
    authby=rsasig

conn vm2
    left={{ vm1_internal_ip }}
    leftsubnet={{ internal_net_cidr }}
    right=%any
    rightsourceip={{ vm2_internal_ip }}
    auto=add